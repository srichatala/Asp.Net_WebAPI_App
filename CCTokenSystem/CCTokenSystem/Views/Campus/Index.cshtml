<div ng-controller="CampusCtrl">
    <form class="form-horizontal" name="myForm" novalidate>
        <div class="row">
            <div class="col-lg-5">
                <h3>Add Campus</h3>
                <div class="form-group">
                    <label for="firstname" class="col-sm-4 control-label">Campus Name:</label>
                    <div class="col-sm-8">
                        <input type="text" name="fname" class="form-control" ng-model="campus.CampusName" placeholder="First Name" ng-pattern="/^[a-zA-Z]*$/" required>
                        <span style="color:red" ng-show="myForm.fname.$dirty && myForm.fname.$invalid">
                            <span ng-show="myForm.fname.$error.required">Campus name is required</span>
                            <span ng-show="myForm.fname.$error.pattern">Invalid Campus Name</span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="phonenumber" class="col-sm-4 control-label">Contact Number:</label>
                    <div class="col-sm-8">
                        <input type="text" name="pnumber" class="form-control" ng-model="campus.ContactNo" placeholder="Phone Number" ng-minlength="10" ng-maxlength="10" ng-pattern="/^[(]{0,1}[0-9]{3}[)]{0,1}[-s.]{0,1}[0-9]{3}[-s.]{0,1}[0-9]{4}$/" required>
                        <span style="color:red" ng-show="myForm.pnumber.$dirty && myForm.pnumber.$invalid">
                            <span ng-show="myForm.pnumber.$error.required">Phone Number is required</span>
                            <span ng-show="myForm.pnumber.$error.pattern || myForm.pnumber.$error.minlength || myForm.pnumber.$error.maxlength">Invalid Phone Number</span>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <input type="submit" ng-show="addSt" ng-click="Create(campus)" ng-disabled="myForm.studentid.$dirty && myForm.studentid.$invalid || myForm.fname.$dirty && myForm.fname.$invalid ||
                       myForm.lname.$dirty && myForm.lname.$invalid ||
                       myForm.pnumber.$dirty && myForm.pnumber.$invalid || myForm.course.$dirty && myForm.course.$invalid ||
                       myForm.email.$dirty && myForm.email.$invalid" class="btn btn-success" value="Submit" />
                        <input type="submit" ng-show="updateSt" ng-click="Update(campus)" class="btn btn-warning" value="Update" />
                        <input type="submit" ng-show="clearSt" ng-click="Clear()" class="btn btn-default" value="Create New" />
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <h3>Campus Details</h3>
                <table class="table table-striped">
                    <tr>
                        <th>S.No</th>
                        <th>Campus Name</th>
                        <th>Contact Number</th>
                        <th>Actions</th>
                    </tr>
                    <tr ng-repeat="campus in CampusData">
                        <td>
                            {{campus.CampusId}}
                        </td>
                        <td>
                            {{campus.CampusName}}
                        </td>
                        <td>
                            {{campus.ContactNo}}
                        </td>
                        <td>
                            <button class="btn btn-warning" ng-click="Select(campus.CampusId)"><span class="glyphicon glyphicon-pencil"></span></button>
                            <button class="btn btn-danger" ng-click="Remove(campus.CampusId)"><span class="glyphicon glyphicon-remove"></span></button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </form>
</div>