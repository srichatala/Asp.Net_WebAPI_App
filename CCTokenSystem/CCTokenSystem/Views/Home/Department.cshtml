<script src="~/Scripts/Controller/DeptCtrl/DeptCtrl.js"></script>
<div ng-controller="DeptCtrl">
    <form class="form-horizontal" name="myForm" novalidate>
        <h3>Add Department</h3>
        <div class="form-group">
            <label for="firstname" class="col-sm-5 control-label">Department Name:</label>
            <div class="col-sm-7">
                <input type="text" name="deptname" class="form-control" ng-model="dept.DeptName" placeholder="Dept Name" ng-pattern="/^[a-zA-Z]*$/" required>
                <span style="color:red" ng-show="myForm.deptname.$dirty && myForm.deptname.$invalid">
                    <span ng-show="myForm.deptname.$error.required">First name is required</span>
                    <span ng-show="myForm.deptname.$error.pattern">Invalid First Name</span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="firstname" class="col-sm-5 control-label">Advisor First Name:</label>
            <div class="col-sm-7">
                <input type="text" name="afname" class="form-control" ng-model="dept.Advisor_Fname" placeholder="First Name" ng-pattern="/^[a-zA-Z]*$/" required>
                <span style="color:red" ng-show="myForm.afname.$dirty && myForm.afname.$invalid">
                    <span ng-show="myForm.afname.$error.required">Advisor First name is required</span>
                    <span ng-show="myForm.afname.$error.pattern">Invalid Advisor First Name</span>
                </span>
            </div>
        </div>
       
        <div class="form-group">
            <label for="lastname" class="col-sm-5 control-label">Advisor Last Name:</label>
            <div class="col-sm-7">
                <input type="text" name="alname" class="form-control" ng-model="dept.Advisor_Lname" placeholder="Last Name" ng-pattern="/^[a-zA-Z]*$/" required>
                <span style="color:red" ng-show="myForm.alname.$dirty && myForm.alname.$invalid">
                    <span ng-show="myForm.alname.$error.required">Last name is required</span>
                    <span ng-show="myForm.alname.$error.pattern">Invalid Last Name</span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-5 control-label">Email:</label>
            <div class="col-sm-7">
                <input type="email" class="form-control" name="input" ng-model="dept.Email" placeholder="Email" required>
                <span style="color:red" ng-show="myForm.input.$dirty && myForm.input.$invalid">
                    <span ng-show="myForm.input.$error.required">Email is required</span>
                    <span ng-show="myForm.input.$error.email">Invalid Email</span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="phonenumber" class="col-sm-5 control-label">Contact Number:</label>
            <div class="col-sm-7">
                <input type="text" name="pnumber" class="form-control" ng-model="dept.ContactNo" placeholder="Contact Number" ng-minlength="10" ng-maxlength="10" ng-pattern="/^[(]{0,1}[0-9]{3}[)]{0,1}[-s.]{0,1}[0-9]{3}[-s.]{0,1}[0-9]{4}$/" required>
                <span style="color:red" ng-show="myForm.pnumber.$dirty && myForm.pnumber.$invalid">
                    <span ng-show="myForm.pnumber.$error.required">Phone Number is required</span>
                    <span ng-show="myForm.pnumber.$error.pattern || myForm.pnumber.$error.minlength || myForm.pnumber.$error.maxlength">Invalid Phone Number</span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="studentid" class="col-sm-5 control-label">Extension:</label>
            <div class="col-sm-7">
                <input type="text" name="extenstion" class="form-control" ng-model="dept.Extension" placeholder="Extension" ng-minlength="4" ng-maxlength="4" ng-pattern="/^[0-9]+$/" required>
                <span style="color:red" ng-show="myForm.extenstion.$dirty && myForm.extenstion.$invalid">
                    <span ng-show="myForm.extenstion.$error.required">Extension is required</span>
                    <span ng-show="myForm.extenstion.$error.minlength || myForm.extenstion.$error.maxlength || myForm.extenstion.$error.pattern">Invalid Extension (Only numbers)</span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="studentid" class="col-sm-5 control-label">Campus Name:</label>
            <div class="col-sm-7">
                <select id="campusId" name="campus" class="form-control" ng-model="dept.CampusId" 
                        ng-options="campus.CampusId as campus.CampusName for campus in CampusData"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <input type="submit" ng-show="addSt" ng-click="Create(dept)" ng-disabled="myForm.deptname.$dirty && myForm.deptname.$invalid || myForm.afname.$dirty && myForm.afname.$invalid ||
                       myForm.alname.$dirty && myForm.alname.$invalid ||
                       myForm.pnumber.$dirty && myForm.pnumber.$invalid || myForm.extenstion.$dirty && myForm.extenstion.$invalid ||
                       myForm.email.$dirty && myForm.email.$invalid" class="btn btn-success" value="Submit" />
                <input type="submit" ng-show="updateSt" ng-click="Update(dept)" class="btn btn-warning" value="Update" />
                <input type="submit" ng-show="clearSt" ng-click="Clear()" class="btn btn-default" value="Create New" />
            </div>
        </div>
        <div class="col-lg-12">
            <h3>Department Details</h3>
            <table class="table table-striped">
                <tr>
                    <th>Dept ID</th>
                    <th>Dept Name ID</th>
                    <th>Adivsor First Name</th>
                    <th>Advisor Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Extension</th>
                    <th>Campus</th>
                    <th>Actions</th>
                </tr>
                <tr ng-repeat="dept in DeptData">   
                    <td>
                        {{dept.DeptId}}
                    </td>
                    <td>
                        {{dept.DeptName}}
                    </td>
                    <td>
                        {{dept.Advisor_Fname}}
                    </td>
                    <td>
                        {{dept.Advisor_Lname}}
                    </td>
                    <td>
                        {{dept.Email}}
                    </td>
                    <td>
                        {{dept.ContactNo}}
                    </td>
                    <td>
                        {{dept.Extension}}
                    </td>
                    <td >
                     {{dept.Campuses.CampusName}}
                    </td>
                    <td>
                        <button class="btn btn-warning" ng-click="Select(dept.DeptId)"><span class="glyphicon glyphicon-pencil"></span></button>
                        <button class="btn btn-danger" ng-click="Remove(dept.DeptId)"><span class="glyphicon glyphicon-remove"></span></button>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</div>
